#!/bin/bash

LOG_FILE=~/.screen.log
rm -rf LOG_FILE
exec 2>&1
exec 1<>$LOG_FILE

xrandr --output VGA1 --primary --mode 1920x1080 --pos 0x0 --output LVDS1 --mode 1366x768 --pos 277x1080 --output HDMI1 --off
#xrandr --output VGA1 --primary --mode 1280x1024 --pos 86x0 --output LVDS1 --mode 1366x768 --pos 0x1024 --output HDMI1 --off

feh --no-fehbg --bg-fill "$HOME/.background.jpg"
xset -dpms
i3-msg restart
